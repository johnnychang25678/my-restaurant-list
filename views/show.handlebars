<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <div class="group float-right m-1 text-secondary">
        <button class="btn btn-outline-secondary">
          <a href="/restaurants/{{restaurant._id}}/edit" class="edit">
            <i class="fas fa-edit"></i>
          </a>
        </button>

        <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" class="delete-form"
          id="delete-form-{{restaurant._id}}" onsubmit="return confirm('確定要刪除嗎？')">
          <button type="submit" class="btn btn-outline-secondary">
            <i class="fas fa-trash-alt"></i>
          </button>
        </form>
      </div>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>